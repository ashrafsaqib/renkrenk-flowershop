{% if products %}
  <div class="cart-items">
    {% for product in products %}
      <div class="cart-item border-bottom pb-3 mb-3">
        <div class="row g-2">
          <div class="col-4">
            {% if product.thumb %}
              <a href="{{ product.href }}" data-bs-dismiss="offcanvas"><img src="{{ product.thumb }}" alt="{{ product.name }}" class="img-fluid rounded"/></a>
            {% endif %}
          </div>
          <div class="col-8">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <h6 class="mb-1"><a href="{{ product.href }}" class="text-decoration-none text-dark" data-bs-dismiss="offcanvas">{{ product.name }}</a></h6>
              <form action="{{ remove }}" method="post" class="d-inline">
                <input type="hidden" name="key" value="{{ product.cart_id }}">
                <button type="submit" class="btn btn-link text-danger p-0" data-bs-toggle="tooltip" title="{{ button_remove }}">
                  <i class="fa-solid fa-trash-can"></i>
                </button>
              </form>
            </div>
            <div class="small text-muted mb-2">
              {% if product.model %}
                <div>{{ text_model }}: {{ product.model }}</div>
              {% endif %}
              {% for option in product.option %}
                <div>{{ option.name }}: {{ option.value }}</div>
              {% endfor %}
              {% if product.subscription %}
                <div>{{ product.subscription }}</div>
              {% endif %}

              {# Subscription metadata (if present) #}
              {% if product.delivery_date %}
                <div class="small">Delivery: {{ product.delivery_date }}</div>
              {% endif %}

              {% if product.is_gift %}
                <div class="small">Gift: Yes{% if product.gift_name %} â€” {{ product.gift_name }}{% endif %}</div>
              {% endif %}

              {% if product.vase_name %}
                <div class="small">Vase: {{ product.vase_name }}</div>
              {% endif %}
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <div class="text-muted small">Qty: {{ product.quantity }}</div>
              <div class="fw-bold">{{ product.total }}</div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="cart-totals mt-4">
    {% for total in totals %}
      <div class="d-flex justify-content-between py-2 {% if loop.last %}fw-bold border-top pt-3{% endif %}">
        <span>{{ total.title }}</span>
        <span>{{ total.text }}</span>
      </div>
    {% endfor %}
  </div>

  <div class="cart-actions mt-4">
    <a href="{{ cart }}" class="btn btn-outline-dark w-100 mb-2" data-bs-dismiss="offcanvas">{{ text_cart }}</a>
    <a href="{{ checkout }}" class="btn btn-primary w-100" data-bs-dismiss="offcanvas">{{ text_checkout }}</a>
  </div>
{% else %}
  <div class="text-center py-5">
    <i class="fa-solid fa-cart-shopping fa-3x text-muted mb-3"></i>
    <p class="text-muted">{{ text_no_results }}</p>
    <a href="{{ cart }}" class="btn btn-primary" data-bs-dismiss="offcanvas">{{ text_continue }}</a>
  </div>
{% endif %}
