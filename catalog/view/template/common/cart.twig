{% if products %}
  <div class="cart-items">
    {% for product in products %}
      <div class="cart-item border-bottom pb-3 mb-3">
        <div class="row g-2">
          <div class="col-4">
            {% if product.thumb %}
              <a href="{{ product.href }}" data-bs-dismiss="offcanvas"><img src="{{ product.thumb }}" alt="{{ product.name }}" class="img-fluid rounded"/></a>
            {% endif %}
          </div>
          <div class="col-8">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <h6 class="mb-1"><a href="{{ product.href }}" class="text-decoration-none text-dark" data-bs-dismiss="offcanvas">{{ product.name }}</a></h6>
              <form action="{{ remove }}" method="post" class="d-inline">
                <input type="hidden" name="key" value="{{ product.cart_id }}">
                <button type="submit" class="btn btn-link text-danger p-0" data-bs-toggle="tooltip" title="{{ button_remove }}">
                  <i class="fa-solid fa-trash-can"></i>
                </button>
              </form>
            </div>
            <div class="small text-muted mb-2">
              {% for option in product.option %}
                <div>{{ option.name }}: {{ option.value }}</div>
              {% endfor %}
              {% if product.subscription %}
                <div>{{ product.subscription }}</div>
              {% endif %}

              {# Subscription options (if present) - styled like popup #}
              {% if product.subscription_options %}
                <div class="subscription-options-box mt-2 p-2" style="background: #f8f8f8; border-left: 3px solid #2c2c2c; font-size: 11px;">
                  {% if product.subscription_options.frequency %}
                    <div class="mb-1">
                      <strong style="color: #2c2c2c; text-transform: uppercase; font-size: 10px; letter-spacing: 0.5px;">Select Your Frequency:</strong>
                      <div style="color: #666;">{{ product.subscription_options.frequency }}</div>
                    </div>
                  {% endif %}
                  {% if product.subscription_options.is_gift %}
                    <div class="mb-1">
                      <strong style="color: #2c2c2c; text-transform: uppercase; font-size: 10px; letter-spacing: 0.5px;">Is This A Gift?:</strong>
                      <div style="color: #666;">{{ product.subscription_options.is_gift }}</div>
                    </div>
                  {% endif %}
                  {% if product.subscription_options.duration %}
                    <div class="mb-1">
                      <strong style="color: #2c2c2c; text-transform: uppercase; font-size: 10px; letter-spacing: 0.5px;">Select Your Duration:</strong>
                      <div style="color: #666;">{{ product.subscription_options.duration }}</div>
                    </div>
                  {% endif %}
                  {% if product.subscription_options.delivery_date %}
                    <div>
                      <strong style="color: #2c2c2c; text-transform: uppercase; font-size: 10px; letter-spacing: 0.5px;">First Delivery:</strong>
                      <div style="color: #666;">{{ product.subscription_options.delivery_date }}</div>
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <div class="text-muted small">Qty: {{ product.quantity }}</div>
              <div class="fw-bold">{{ product.total }}</div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="cart-totals mt-4">
    {% for total in totals %}
      <div class="d-flex justify-content-between py-2 {% if loop.last %}fw-bold border-top pt-3{% endif %}">
        <span>{{ total.title }}</span>
        <span>{{ total.text }}</span>
      </div>
    {% endfor %}
  </div>

  <div class="cart-actions mt-4">
    <a href="{{ cart }}" class="btn btn-outline-dark w-100 mb-2">{{ text_cart }}</a>
    <a href="{{ checkout }}" class="btn btn-primary w-100">{{ text_checkout }}</a>
  </div>
{% else %}
  <div class="text-center py-5">
    <i class="fa-solid fa-cart-shopping fa-3x text-muted mb-3"></i>
    <p class="text-muted">{{ text_no_results }}</p>
    <a href="{{ cart }}" class="btn btn-primary">{{ text_continue }}</a>
  </div>
{% endif %}
