<script>
function closeCartPopup() {
  const modal = document.getElementById('cart-popup-modal');
  if (modal) {
    modal.style.display = 'none';
    modal.classList.remove('active');
    document.body.style.overflow = '';
  }
}

function showCartPopup(data) {
  const modal = document.getElementById('cart-popup-modal');
  if (!modal || !data.product) return;

  // Populate product details
  const productImage = document.getElementById('popup-product-image');
  const productName = document.getElementById('popup-product-name');
  const productQuantity = document.getElementById('popup-product-quantity');
  const productQuantityWrapper = document.getElementById('popup-product-quantity-wrapper');
  const productPrice = document.getElementById('popup-product-price');

  if (productImage && data.product.image) {
    productImage.src = data.product.image;
    productImage.alt = data.product.name || '';
  }

  if (productName && data.product.name) {
    productName.textContent = data.product.name;
  }

  if (productQuantity && data.product.quantity) {
    productQuantity.textContent = data.product.quantity;
  }

  if (productPrice && data.product.price) {
    productPrice.textContent = data.product.price;
  } else {
    productPrice.style.display = 'none';
  }

  // Populate related products (upsell)
  const relatedSection = document.getElementById('popup-related-products');
  const relatedContainer = document.getElementById('popup-related-container');

  if (data.related && data.related.length > 0) {
    relatedContainer.innerHTML = '';
    
    data.related.forEach(function(product) {
      const card = document.createElement('div');
      card.className = 'upsell-product-card';
      
      card.innerHTML = `
        <a href="${product.href}">
          <div class="upsell-product-image">
            <img src="${product.thumb}" alt="${product.name}" />
          </div>
          <div class="upsell-product-info">
            <div class="upsell-product-name">
              <a href="${product.href}">${product.name}</a>
            </div>
            <div class="upsell-product-price">${product.price}</div>
          </div>
        </a>
      `;
      
      relatedContainer.appendChild(card);
    });
    
    relatedSection.style.display = 'block';
  } else {
    relatedSection.style.display = 'none';
  }

  // Show modal
  modal.style.display = 'flex';
  modal.classList.add('active');
  document.body.style.overflow = 'hidden';
}

function addRelatedToCart(productId) {
  // Simple add to cart for related products
  fetch('index.php?route=checkout/cart.add&language={{ language }}', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/x-www-form-urlencoded',
    },
    body: 'product_id=' + productId + '&quantity=1'
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      // Refresh cart header or show notification
      if (typeof updateCart === 'function') {
        updateCart();
      }
      alert('Product added to cart!');
    } else if (data.error) {
      alert(data.error.warning || 'Error adding product');
    }
  });
}

// Close modal on overlay click
document.addEventListener('click', function(e) {
  const modal = document.getElementById('cart-popup-modal');
  if (e.target === modal) {
    closeCartPopup();
  }
});

// Close modal on Escape key
document.addEventListener('keydown', function(e) {
  if (e.key === 'Escape') {
    closeCartPopup();
  }
});
</script>
