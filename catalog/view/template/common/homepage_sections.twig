<div class="homepage-sections">

  <!-- Section 0: Slideshow -->
  {% if slideshow %}
  <section class="slideshow-section mb-5">
    {{ slideshow }}
  </section>
  {% endif %}


  <!-- Section 1.5: Featured Products -->
  {% if featured_products %}
  <section class="featured-products-section mb-5">
    <div class="container">
      {% if featured_products_header %}
      <h5 class="text-left py-4" style="font-weight: bold; letter-spacing: .05em;">{{ featured_products_header }}</h5>
      {% endif %}
      <div class="row">
        {% for product in featured_products %}
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
          <div class="product-card h-100">
            <div class="product-image">
              <a href="{{ product.href }}">
                <img src="{{ product.thumb }}" alt="{{ product.name }}" class="img-fluid"/>
              </a>
            </div>
            <div class="product-info">
                <a href="{{ product.href }}">{{ product.name }}</a>
              {% if product.price %}
              <div class="product-price"> {{ text_from }}  {{ product.price }} 
              </div>
              {% endif %}
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </section>
  {% endif %}



  <!-- Section 1: Text Block -->
    <div style="background-color: #f5f5f5;" class="text-center pt-3 pb-5 mb-5">
        <h4 class="py-3" style="font-weight: bold;letter-spacing: .05em;" >{{ text_block_heading }}</h4>
        <p style="font-size:15px;font-weight: 300">
          {{ text_block     }}
        </p>
      </div>

  <!-- Section 2: Featured Categories -->
  {% if featured_categories or gift_subscriptions_image %}
  <section class="featured-categories-section text-center">
    <div class="container-fluid px-5">
      <div class="row">
         {% if gift_subscriptions_image %}
        <div class="col-md-3 col-sm-6 mb-3">
          <div class="category-card border-0">
            <a href="{{ subscription_list_link }}">
            <img src="{{ gift_subscriptions_image }}" alt="Gift Subscriptions" class="img-fluid">
            </a>
            <div class="category-info">
              <h3><a href="{{ subscription_list_link }}">{{ text_gift_subscription }}</a></h3>
                            <h6><a href="{{ subscription_list_link }}">{{ text_shop_now }}</a></h6>
            </div>
          </div>
        </div>
        {% endif %}
        {% for category in featured_categories %}
        <div class="col-md-3 col-sm-6 mb-3">
          <div class="category-card border-0">
            {% if category.image %}
            <a href="{{ category.href }}">
              <img src="{{ category.image }}" alt="{{ category.name }}" class="img-fluid">
            </a>
            {% endif %}
            <div class="category-info">
              <h3><a href="{{ category.href }}">{{ category.name }}</a></h3>
                            <h6><a href="{{ category.href }}">{{ text_shop_now }}</a></h6>
              
            </div>
          </div>
        </div>
        {% endfor %}
       
      </div>
    </div>
  </section>
  {% endif %}

  <!-- Section 3: Static Image -->
  {% if static_image %}
  <section class="static-image-section text-center">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12 p-0">
          <img src="{{ static_image }}" alt="Static Image" class="img-fluid w-100">
        </div>
      </div>
    </div>
<h4 class="py-4">{{ static_image_header }}</h4>
    
            <p>{{ static_image_text }}</p>
         <a class="readmore mx-5" href="{{ subscription_list_link }}">{{ text_subscribe_now }}</a>
  </section>
  {% endif %}

  <!-- Section 5: Featured Topics/Articles -->
  {% if featured_items %}
  <div  style="background-color: #f5f5f5;">
    <div class="container-fluid px-5 topics-module pt-2 mt-5" >
      <h3 class="text-center py-3">{{ text_discover_world }}</h3>
      <div class="row justify-content-center">
        {% for item in featured_items %}
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
          <div class="card h-100 border-0">
            <a href="{{ item.href }}">
              <img src="{{ item.image }}" alt="{{ item.name }}" class="card-img-top"/>
            </a>
            <div class="card-body text-left">
              <h2 class="card-title">
                <a href="{{ item.href }}">{{ item.name|upper }}</a>
              </h2>
              {% if item.description %}
                <p class="card-text">{{ item.description }}</p>
              {% endif %}
                <a class="readmore" href="{{ item.href }}">{{ text_read_more }}</a>

            </div>
          </div>
        </div>
        {% if loop.index % 3 == 0 %}
      </div><div class="row justify-content-center">
        {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
  {% endif %}

  <!-- Section 6: Meet Section -->
  {% if meet_image or meet_header or meet_paragraph %}
  <section class="meet-section">
    <div class="container">
      <div class="row align-items-center">
        {% if meet_image %}
        <div class="col-md-6 mb-4 mb-md-0">
          <img src="{{ meet_image }}" alt="{{ meet_header }}" class="img-fluid">
        </div>
        {% endif %}
        <div class="col-md-6 text-center">
          {% if meet_header %}
          <h2>{{ meet_header }}</h2>
          {% endif %}
          {% if meet_paragraph %}
          <p>{{ meet_paragraph }}</p>
          {% endif %}
          <p><a class="btn btn-primary" href="flowers">{{ text_discover_flowers }}</a></p>
        </div>
      </div>
    </div>
  </section>
  {% endif %}

  <!-- Section 7: Full Width Banner -->
  {% if banner_image %}
  <section class="full-width-banner-section">
    <div class="container">
      <div class="row">
        <div class="col-12 p-0">
          <img src="{{ banner_image }}" alt="Banner" class="img-fluid w-100">
        </div>
      </div>
    </div>
  </section>
  {% endif %}

</div>
