{% if categories %}
    <!-- Mobile Menu Offcanvas (slides from left) -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="mobileMenuModal" aria-labelledby="mobileMenuLabel">
      <div class="offcanvas-header">
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body p-0">
        <div class="accordion accordion-flush" id="mobileMenuAccordion">
          {% if subscriptions %}
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#subscriptions-collapse">
                Subscriptions
              </button>
            </h2>
            <div id="subscriptions-collapse" class="accordion-collapse collapse" data-bs-parent="#mobileMenuAccordion">
              <div class="accordion-body p-0">
                <ul class="list-unstyled mobile-submenu">
                  <li class="mobile-submenu-header">Discover FLOWERBX Subscriptions</li>
                  <li><a href="{{ all_subscriptions_href }}" class="mobile-submenu-item">Discover All</a></li>
                  {% for subscription in subscriptions %}
                    <li><a href="{{ subscription.href }}" class="mobile-submenu-item">{{ subscription.name }}</a></li>
                  {% endfor %}
                  <li class="mobile-submenu-header mt-3">Subscription Gifts</li>
                  <li><a href="{{ all_subscriptions_href }}" class="mobile-submenu-item">Gift Subscriptions</a></li>
                  <li class="mobile-submenu-header mt-3">Find out More</li>
                  <li><a href="{{ what_to_expect_href }}" class="mobile-submenu-item">What to Expect</a></li>
                  <li><a href="{{ all_subscriptions_href }}" class="mobile-submenu-item">Discover All Subscriptions</a></li>
                </ul>
              </div>
            </div>
          </div>
          {% endif %}
          
          {% for category in categories %}
            {% if category.children %}
              <div class="accordion-item">
                <h2 class="accordion-header">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#category-{{ loop.index }}-collapse">
                    {{ category.name }}
                  </button>
                </h2>
                <div id="category-{{ loop.index }}-collapse" class="accordion-collapse collapse" data-bs-parent="#mobileMenuAccordion">
                  <div class="accordion-body p-0">
                    <ul class="list-unstyled mobile-submenu">
                      <li><a href="{{ category.href }}" class="mobile-submenu-item fw-bold">Discover All {{ category.name }}</a></li>
                      {% for child in category.children %}
                        <li><a href="{{ child.href }}" class="mobile-submenu-item">{{ child.name }}</a></li>
                      {% endfor %}
                    </ul>
                  </div>
                </div>
              </div>
            {% else %}
              <div class="accordion-item">
                <h2 class="accordion-header">
                  <a href="{{ category.href }}" class="accordion-button collapsed text-decoration-none" style="pointer-events: auto;">
                    {{ category.name }}
                  </a>
                </h2>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>

    <!-- Desktop Menu (hidden on mobile) -->
    <nav id="menu" class="navbar navbar-expand-lg d-none d-lg-block">
      <div class="container">
       
        <div id="navbar-menu" class="navbar-collapse">
          <ul class="nav navbar-nav mx-auto justify-content-center">
            {% if subscriptions %}
            <li class="nav-item dropdown"><a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Subscriptions</a>
              <div class="dropdown-menu dropdown-menu-fullwidth">
                <div class="container">
                  <div class="dropdown-inner">
                    <ul class="list-unstyled">
                      <li class="dropdown-header">Discover FLOWERBX Subscriptions</li>
                      <li><a href="{{ all_subscriptions_href }}" class="dropdown-item">Discover All </a></li>
                      
                      {% for subscription in subscriptions %}
                        <li><a href="{{ subscription.href }}" class="dropdown-item">{{ subscription.name }}</a></li>
                      {% endfor %}
                    </ul>
                    <ul class="list-unstyled">
                      <li class="dropdown-header">Subscription Gifts</li>
                      <li><a href="{{ all_subscriptions_href }}" class="dropdown-item">Gift Subscriptions</a></li>
                    </ul>
                    <ul class="list-unstyled">
                      <li class="dropdown-header">Find out More</li>
                      <li><a href="{{ what_to_expect_href }}" class="dropdown-item">What to Expect</a></li>
                      <li><a href="{{ all_subscriptions_href }}" class="dropdown-item">Discover All Subscriptions</a></li>
                    </ul>
                  </div>
                </div>
              </div>
            </li>
          {% endif %}
          {% for category in categories %}
            {% if category.children %}
              {% set total = category.children|length %}
              {% if total > 20 %}
                {% set batch = (total / 4)|round(0, 'ceil') %}
                {% set column = 4 %}
              {% else %}
                {% set batch = 5 %}
                {% set column = (total / 5)|round(0, 'ceil') %}
              {% endif %}
              <li class="nav-item dropdown"><a href="{{ category.href }}" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">{{ category.name }}</a>
                <div class="dropdown-menu dropdown-menu-fullwidth dropdown-column-{{ column }}">
                  <div class="container">
                    <div class="dropdown-inner">
                      {% for children in category.children|batch(batch) %}
                        <ul class="list-unstyled">
                          <li><a href="{{ category.href }}" class="dropdown-item">Discover All</a></li>

                          {% for child in children %}
                            <li><a href="{{ child.href }}" class="dropdown-item">{{ child.name }}</a></li>
                          {% endfor %}
                        </ul>
                      {% endfor %}
                    </div>
                  </div>
                </div>
              </li>
            {% else %}
              <li class="nav-item"><a href="{{ category.href }}" class="dropdown-item">{{ category.name }}</a></li>
            {% endif %}
          {% endfor %}
        
        </ul>
      </div>
    </div>
    </nav>
{% endif %}
