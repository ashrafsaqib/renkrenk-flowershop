<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>{{ column_product }}</th>
        <th class="text-end">{{ column_total }}</th>
      </tr>
    </thead>
    <tbody>
      {% for product in products %}
        <tr>
          <td>{{ product.quantity }}x <a href="{{ product.href }}">{{ product.name }}</a>

            <ul class="list-unstyled mb-0">
              <li>
                <small> - {{ text_model }}: {{ product.model }}</small>
              </li>
              {% for option in product.option %}
                <li>
                  <small> - {{ option.name }}: {{ option.value }}</small>
                </li>
              {% endfor %}

              {% if product.subscription %}
                <li>
                  <small> - {{ text_subscription }}: {{ product.subscription }}</small>
                </li>
              {% endif %}
              
              {# Subscription options styled like cart #}
              {% if product.subscription_options %}
                <li>
                  <div class="subscription-options-box mt-2 p-2" style="background: #f8f8f8; border-left: 3px solid #2c2c2c; font-size: 11px;">
                    {% if product.subscription_options.frequency %}
                      <div class="mb-1">
                        <strong style="color: #2c2c2c; text-transform: uppercase; font-size: 10px; letter-spacing: 0.5px;">Select Your Frequency:</strong>
                        <div style="color: #666;">{{ product.subscription_options.frequency }}</div>
                      </div>
                    {% endif %}
                    {% if product.subscription_options.is_gift %}
                      <div class="mb-1">
                        <strong style="color: #2c2c2c; text-transform: uppercase; font-size: 10px; letter-spacing: 0.5px;">Is This A Gift?:</strong>
                        <div style="color: #666;">{{ product.subscription_options.is_gift }}</div>
                      </div>
                    {% endif %}
                    {% if product.subscription_options.duration %}
                      <div class="mb-1">
                        <strong style="color: #2c2c2c; text-transform: uppercase; font-size: 10px; letter-spacing: 0.5px;">Select Your Duration:</strong>
                        <div style="color: #666;">{{ product.subscription_options.duration }}</div>
                      </div>
                    {% endif %}
                    {% if product.subscription_options.delivery_date %}
                      <div>
                        <strong style="color: #2c2c2c; text-transform: uppercase; font-size: 10px; letter-spacing: 0.5px;">First Delivery:</strong>
                        <div style="color: #666;">{{ product.subscription_options.delivery_date }}</div>
                      </div>
                    {% endif %}
                  </div>
                </li>
              {% endif %}

              {% if product.reward %}
                <li>
                  <small> - {{ text_points }}: {{ product.reward }}</small>
                </li>
              {% endif %}
            </ul>

          </td>
          <td class="text-end">{{ product.total }}</td>
        </tr>
      {% endfor %}
    </tbody>
    <tfoot>
      {% for total in totals %}
        <tr>
          <td class="text-end"><strong>{{ total.title }}</strong></td>
          <td class="text-end">{{ total.text }}</td>
        </tr>
      {% endfor %}
    </tfoot>
  </table>
</div>
<div id="checkout-payment">
  {% if payment %}
    {{ payment }}
  {% else %}
    <div class="text-end"><button type="button" class="btn btn-primary" disabled>{{ button_confirm }}</button></div>
  {% endif %}
</div>
