<div class="product-thumb">
  <div class="image"><a href="{{ href }}"><img src="{{ thumb }}" alt="{{ name }}" title="{{ name }}" class="img-fluid"/></a></div>
  <div class="content">
    <div class="description">
      <h4><a href="{{ href }}">{{ name }}</a></h4>
        <div class="price">
          {% if not special %}
            <span class="price-new"><x-currency code="{{ currency }}" amount="{{ price }}">{{ price }}</span>
          {% else %}
            <span class="price-new">{{ special }}</span>
            <span class="price-old">{{ price }}</span>
          {% endif %}
          {% if tax %}
            <span class="price-tax">{{ text_tax }} {{ tax }}</span>
          {% endif %}
        </div>
    </div>
  </div>
</div>