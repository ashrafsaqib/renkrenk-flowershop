              {% endif %}
            </div>
          </div>
        </div>
      </div>
      {{ related }}
      {{ content_bottom }}
    </div>
    {{ column_right }}
  </div>
</div>
<script type="text/javascript"><!--
$('#input-subscription').on('change', function(e) {
    var element = this;

    $('.subscription').addClass('d-none');

    $('#subscription-description-' + $(element).val()).removeClass('d-none');
});

$('#form-product').on('submit', function(e) {
    e.preventDefault();

    $.ajax({
        url: 'index.php?route=checkout/cart.add&language={{ language }}',
        type: 'post',
        data: $('#form-product').serialize(),
        dataType: 'json',
        contentType: 'application/x-www-form-urlencoded',
        cache: false,
        processData: false,
        beforeSend: function() {
            $('#button-cart').button('loading');
        },
        complete: function() {
            $('#button-cart').button('reset');
        },
        success: function(json) {
            console.log(json);

            $('#form-product').find('.is-invalid').removeClass('is-invalid');
            $('#form-product').find('.invalid-feedback').removeClass('d-block');

            if (json['error']) {
                for (key in json['error']) {
                    $('#input-' + key.replaceAll('_', '-')).addClass('is-invalid').find('.form-control, .form-select, .form-check-input, .form-check-label').addClass('is-invalid');
                    $('#error-' + key.replaceAll('_', '-')).html(json['error'][key]).addClass('d-block');
                }
            }

            if (json['success']) {
                // Show popup modal if available
                if (json['popup_html'] && typeof showCartPopup === 'function') {
                    showCartPopup(json['popup_html']);
                } else {
                    // Fallback to alert
                    $('#alert').prepend('<div class="alert alert-success alert-dismissible"><i class="fa-solid fa-circle-check"></i> ' + json['success'] + ' <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>');
                }

                $('#cart').load('index.php?route=common/cart.info&language={{ language }}');
            }
        },
        error: function(xhr, ajaxOptions, thrownError) {
            console.log(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
        }
    });
});

// Function to calculate and update price based on selected options
function updateProductPrice() {
    var basePrice = parseFloat($('#button-cart').data('base-price')) || 0;
    var totalOptionPrice = 0;
    
    // Calculate price from select options
    $('.option-select').each(function() {
        var selectedOption = $(this).find('option:selected');
        var price = parseFloat(selectedOption.data('price')) || 0;
        var prefix = selectedOption.data('price-prefix') || '+';
        
        if (prefix === '+') {
            totalOptionPrice += price;
        } else if (prefix === '-') {
            totalOptionPrice -= price;
        }
    });
    
    // Calculate price from radio options
    $('.option-radio:checked').each(function() {
        var price = parseFloat($(this).data('price')) || 0;
        var prefix = $(this).data('price-prefix') || '+';
        
        if (prefix === '+') {
            totalOptionPrice += price;
        } else if (prefix === '-') {
            totalOptionPrice -= price;
        }
    });
    
    // Calculate price from checkbox options
    $('.option-checkbox:checked').each(function() {
        var price = parseFloat($(this).data('price')) || 0;
        var prefix = $(this).data('price-prefix') || '+';
        
        if (prefix === '+') {
            totalOptionPrice += price;
        } else if (prefix === '-') {
            totalOptionPrice -= price;
        }
    });
    
    // Calculate price from selected vase
    var selectedVase = $('.vase-option:checked');
    if (selectedVase.length > 0) {
        var vasePrice = parseFloat(selectedVase.data('price')) || 0;
        totalOptionPrice += vasePrice;
    }
    
    // Calculate price from selected addons
    $('.addon-option:checked').each(function() {
        var addonPrice = parseFloat($(this).data('price')) || 0;
        totalOptionPrice += addonPrice;
    });
    
    // Calculate final price
    var finalPrice = basePrice + totalOptionPrice;
    
    // Format price with currency
    var currencyLeft = $('#button-cart').data('currency-left') || '';
    var currencyRight = $('#button-cart').data('currency-right') || '';
    var buttonText = $('#button-cart').data('button-text') || 'Add to Cart';
    var formattedPrice = currencyLeft + finalPrice.toFixed(2) + currencyRight;
    
    // Update all button prices
    $('#button-cart .price-display').html(formattedPrice + ' ' + buttonText);
    $('#button-step1 .priceFinal, #button-step2 .priceFinal').html(formattedPrice);
}

$(document).ready(function() {
    // Attach event listeners to option changes
    $('.option-select').on('change', updateProductPrice);
    $('.option-radio').on('change', updateProductPrice);
    $('.option-checkbox').on('change', updateProductPrice);
    $('.vase-option').on('change', updateProductPrice);
    $('.addon-option').on('change', updateProductPrice);
    
    // Initial price calculation on page load
    updateProductPrice();
    
    $('.magnific-popup').magnificPopup({
        type: 'image',
        delegate: 'a',
        gallery: {
            enabled: true
        }
    });

    // Initialize calendar for date options
    {% for option in options %}
        {% if option.type == 'date' %}
            var today = new Date();
            today.setHours(0, 0, 0, 0);
            var calendar{{ option.product_option_id }} = new Calendar('calendar-option-{{ option.product_option_id }}', {
                minDate: today,
                defaultDate: {% if option.value %}'{{ option.value }}'{% else %}today{% endif %},
                onDateSelect: function(dateStr) {
                    document.getElementById('input-option-{{ option.product_option_id }}').value = dateStr;
                }
            });
            calendar{{ option.product_option_id }}.render();
        {% endif %}
    {% endfor %}

    // Vase selection
    (function(){
        var label = document.getElementById('selectedVase');

        // Set initial label based on checked radio button
        if (label) {
            var checkedVase = document.querySelector('.btn-vase-img.active');
            if (checkedVase) {
                label.textContent = checkedVase.getAttribute('data-name') || checkedVase.getAttribute('title') || 'None';
            } else {
                label.textContent = 'None';
            }
        }

        document.querySelectorAll('.btn-vase-img').forEach(function(btn){
            btn.addEventListener('click', function(){
                document.querySelectorAll('.btn-vase-img').forEach(function(b){
                    b.classList.remove('active');
                    b.setAttribute('aria-pressed','false');
                });
                this.classList.add('active');
                this.setAttribute('aria-pressed','true');

                if (label) label.textContent = this.getAttribute('data-name') || this.getAttribute('title');
                this.querySelector('input[type="radio"]').checked = true;
                
                // Trigger price update
                updateProductPrice();
            });
        });
    })();

    // Addon selection
    (function(){
        document.querySelectorAll('.btn-addon-img').forEach(function(btn){
            btn.addEventListener('click', function(e){
                e.preventDefault();
                var checkbox = this.querySelector('input[type="checkbox"]');
                checkbox.checked = !checkbox.checked;
                
                if (checkbox.checked) {
                    this.classList.add('active');
                    this.setAttribute('aria-pressed', 'true');
                } else {
                    this.classList.remove('active');
                    this.setAttribute('aria-pressed', 'false');
                }
                
                // Trigger price update
                updateProductPrice();
            });
        });
    })();

    // Stepped checkout logic
    var hasStep1 = $('.step1').length > 0;
    var hasStep2 = $('.step2').length > 0;

    if (hasStep1 && hasStep2) {
        // Hide step1 and step2 options initially
        $('.step1').hide();
        $('.step2').hide();
        
        // Hide add to cart button
        $('#button-cart').hide();
        
        // Show step1 button
        $('#button-step1').show();
        
        // Step 1 button click - reveal step1 options and show step2 button
        $('#button-step1').on('click', function() {
            $('.step1').slideDown();
            $(this).hide();
            $('#button-step2').show();
        });
        
        // Step 2 button click - reveal step2 options and show add to cart button
        $('#button-step2').on('click', function() {
            $('.step2').slideDown();
            $(this).hide();
            $('#button-cart').show();
        });
    } else {
        // If no stepped options, show add to cart button normally
        $('#button-step1').hide();
        $('#button-step2').hide();
        $('#button-cart').show();
    }
});
