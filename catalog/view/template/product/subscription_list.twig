{{ header }}
<div id="subscription-list" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    <div id="content" class="col">
      {{ content_top }}
      <h1>{{ heading_title }}</h1>
      
      {% if subscriptions %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-3">
          {% for subscription in subscriptions %}
            <div class="col">
              <div class="card h-100 shadow-sm">
                <a href="{{ subscription.href }}">
                  <img src="{{ subscription.image }}" class="card-img-top" alt="{{ subscription.name }}" style="height: 250px; object-fit: cover;">
                </a>
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title">
                    <a href="{{ subscription.href }}" class="text-decoration-none text-dark">{{ subscription.name }}</a>
                  </h5>
                  
                  {% if subscription.description %}
                    <p class="card-text text-muted flex-grow-1">
                      {{ subscription.description|striptags|slice(0, 120) }}{% if subscription.description|length > 120 %}...{% endif %}
                    </p>
                  {% endif %}
                  
                  <div class="mt-auto">
                    {% if subscription.price %}
                      <div class="mb-2">
                        <span class="h4 text-primary">{{ subscription.price }}</span>
                        {% if subscription.frequency %}
                          <span class="text-muted"> / {{ subscription.frequency }}</span>
                        {% endif %}
                      </div>
                    {% endif %}
                    
                    {% if subscription.duration %}
                      <p class="text-muted small mb-2">
                        <i class="fa fa-clock"></i> {{ subscription.cycle }} {{ subscription.frequency }} for {{ subscription.duration }} deliveries
                      </p>
                    {% else %}
                      <p class="text-muted small mb-2">
                        <i class="fa fa-infinity"></i> Continues until cancelled
                      </p>
                    {% endif %}
                    
                    <a href="{{ subscription.href }}" class="btn btn-primary w-100">
                      <i class="fa fa-shopping-cart"></i> {{ button_subscribe }}
                    </a>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <div class="alert alert-info mt-4">
          <i class="fa fa-info-circle"></i> {{ text_no_subscriptions }}
        </div>
      {% endif %}
      
      {{ content_bottom }}
    </div>
    {{ column_right }}
  </div>
</div>
{{ footer }}
